        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="4dp"
                android:src="@drawable/ic_account"
                android:layout_centerVertical="true"
                android:id="@+id/list_logo"/>

            <TextView
                android:id="@+id/list_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-medium"
                android:text="First Name"
                android:textStyle="normal"
                android:textSize="20dp"
                android:layout_toRightOf="@id/list_logo"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/list_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-medium"
                android:text="Last Name"
                android:textStyle="normal"
                android:textSize="20dp"
                android:layout_toRightOf="@id/list_first_name"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/list_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-medium"
                android:text="Email"
                android:textStyle="normal"
                android:textSize="20dp"
                android:layout_toRightOf="@id/list_logo"
                android:layout_below="@+id/list_first_name"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/list_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium"
                android:text="Contact Number"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_toRightOf="@id/list_logo"
                android:layout_below="@+id/list_email"
                android:textColor="@color/colorPrimary"/>


            <ImageView
                android:id="@+id/delete_logo"
                android:src="@drawable/delete_ic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginRight="-90dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/list_email"
                android:layout_toRightOf="@+id/list_number"
                />




        </RelativeLayout>
